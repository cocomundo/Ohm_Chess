inputmove()
{
showboard();
std::cout << "Please enter the starting square of your move\n";
  std::cin >> k;
while( k < 0 || k > 120 ) 
{ std::cout << "Error: This square is not possible!\n";  
  std::cout << "Please enter a starting square\n";
  std::cin >> k; 
}
std::cout << "Please enter the ending square of your move\n";
  std::cin >> l; 
while( l < 0 || l > 120 ) 
{ std::cout << "Error: This square is not possible!\n";  
  std::cout << "Please enter a ending square\n";
  std::cin >> l; 
}
//is the move legal check
changeboard(k,l);
}
changeboard(k,l)
{
board[l]=board[k];
board[k]=0;
}
showboard()
{
int i=0;
for(i=0;i<120;i++)
{
if(i%10==0)
std::cout << "(";
std::cout << setw(5) << board[i]";
if(i%10==0)
std::cout << ")\n";
}
