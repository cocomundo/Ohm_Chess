    std::cin >> i; 
}
std::cout<<"Type '1' to Play as white, Type '2' to play as black\n";
std::cin >> i;

while( i != 1 && i != 2 ) 
{
    std::cout << "Error: This number is not possible!\n";  
    std::cout << "please enter a listed Number\n";
    std::cout << "Type '1' to Play as white, Type '2' to play as black\n";  
    std::cin >> i; 
}

if(i=1)
{
    inputmove();
} 
while(1)//abbruch bei spielende?
